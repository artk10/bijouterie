{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Détails{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ product.name }}</h1>
        <div class="row">
            <div class="col-md-6">
                <img src="{{ asset('uploads/' ~ product.image) }}" class="img-fluid" alt="{{ product.name }}">
            </div>
            <div class="col-md-6">
                <p><strong>Catégorie :</strong> {{ product.category.name }}</p>
                <p><strong>Description :</strong> {{ product.description }}</p>
                <p><strong>Prix :</strong> {{ product.price }} €</p>
                <a href="#" class="btn btn-success">Acheter</a>
                <a href="{{ path('app_cart_add', {'id': product.id}) }}" class="btn btn-success">Ajouter au panier</a>
                <a href="{{ path('app_products') }}" class="btn btn-secondary">Retour au catalogue</a>
            </div>
        </div>
    </div>
{% endblock %}
