{% extends 'base.html.twig' %}

{% block title %}Votre Panier{% endblock %}

{% block body %}
    <div class="container">
        <h1>Votre Panier</h1>
        {% if cart is empty %}
            <p>Votre panier est vide.</p>
        {% else %}
            <table class="table">
                <thead>
                <tr>
                    <th>Produit</th>
                    <th>Quantité</th>
                    <th>Prix</th>
                    <th>Total</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for item in cart %}
                    <tr>
                        <td>{{ item.product.name }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.product.price }} €</td>
                        <td>{{ item.product.price * item.quantity }} €</td>
                        <td>
                            <a href="{{ path('app_cart_remove', {'id': item.product.id}) }}" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('app_order') }}" class="btn btn-primary">Passer à la commande</a>
            <a href="{{ path('app_cart_clear') }}" class="btn btn-warning">Vider le panier</a>
        {% endif %}
    </div>
{% endblock %}
