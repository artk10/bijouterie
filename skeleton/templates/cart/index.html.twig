{% extends 'base.html.twig' %}

{% block title %}Votre Panier{% endblock %}

{% block body %}
    <div class="cart-container mt-5">
        <h2 class="text-center mb-4">Votre Panier</h2>

        {% if cart is empty %}
            <p class="text-center">Votre panier est vide.</p>
        {% else %}
            <div class="table-responsive">
                <table class="table table-bordered cart-table rounded">
                    <thead class="table-light">
                    <tr>
                        <th>Produit</th>
                        <th class="text-center">Quantité</th>
                        <th class="text-center">Prix</th>
                        <th class="text-center">Total</th>
                        <th class="text-center">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in cart %}
                        <tr>
                            <td>{{ item.product.name }}</td>
                            <td class="text-center">{{ item.quantity }}</td>
                            <td class="text-center">{{ item.product.price }} €</td>
                            <td class="text-center">{{ item.product.price * item.quantity }} €</td>
                            <td class="text-center">
                                <a href="{{ path('app_cart_remove', {'id': item.product.id}) }}" class="btn btn-sm btn-outline-danger">Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_order') }}" class="btn btn-primary">Passer à la commande</a>
                <a href="{{ path('app_cart_clear') }}" class="btn btn-outline-warning">Vider le panier</a>
            </div>
        {% endif %}
    </div>
{% endblock %}

